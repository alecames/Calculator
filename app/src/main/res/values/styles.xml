<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonReg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">32sp</item>
        <item name="android:backgroundTint">@color/dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonAccent1" parent="buttonReg">
        <item name="android:backgroundTint">@color/greenish</item>
    </style>

    <style name="buttonAccent2" parent="buttonReg">
        <item name="android:backgroundTint">@color/otherGreenish</item>
    </style>

    <style name="buttonAccent3" parent="buttonReg">
        <item name="android:backgroundTint">@color/bluish</item>
        <item name="android:textColor">@color/lightBluish</item>
    </style>
</resources>